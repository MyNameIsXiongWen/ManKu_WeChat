/* pages/order/confirmOrder/confirmOrder.wxss */
@import "../../../utils/style/leftright.wxss";
.address,
.goods,
.referrer,
.remark,
.delivery,
.alldiscount,
.allmoney {
  padding: 0 10px;
  font-size: 13px;
  border-bottom: 10px solid #f5f5f5;
  line-height: 40px;
}
.goodsTitle {
  border-bottom: 1px solid #f5f5f5;
  line-height: 40px;
}
.goodsImg {
  height: 100px;
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}
.goodsImg .imgItem {
  display: inline-block;
  width: 80px;
  height: 100%;
}
.goodsImg .imgItem .itemImg {
  margin: 10px 15px 10px 0;
  width: 80px;
  height: 80px;
}

.remarkcontent {
  height: 40px;
  display: flex;
  align-content: center;
}
.remarkcontent input {
  height: 100%;
  font-weight: 200;
}

.allmoney {
  margin-bottom: 40px;
}

.payview {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  background-color: #fff;
}
.payview .paybtn {
  width: 100px;
  line-height: 40px;
  background-color: #ff7919;
  color: #fff;
  text-align: center;
  font-weight: 200;
}
.payview .paycontent {
  font-size: 12px;
  line-height: 20px;
}
