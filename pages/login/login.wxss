.logo {
  height: 80px;
  width: 80px;
  margin: 35px 295rpx;
  border-radius: 10px;
  box-shadow: 0 0 20px #ff7919;
}


.content {
  margin: 0 30px;
  height: 215px;
  position: relative;
}
.phone {
  height: 63px; 
  background: #fff;
  border-bottom: solid 1rpx #999;
  margin: 0 10px;
  padding: 30px 10px 10px;
  box-sizing: border-box;
  position: relative;
}
.phone image {
  width: 25px;
  height: 25px;
  position: absolute;
}
.phone input {
  margin-left: 35px;
  font-size: 14px;
  color: #333;
}
.loginBtn {
  position: absolute;
  bottom: 0;
  line-height: 40px;
  width: 100%;
  border-radius: 20px;
  border: none;
  background: -webkit-linear-gradient(left, #ffe300 , #ff7919);
  color: #fff;
  text-align: center;
  font-weight: 400;
}