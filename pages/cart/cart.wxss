/* pages/cart/cart.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 13px;
  background: #fff;
  z-index: 1;
}
.nav .navitem {
  padding: 0 60rpx;
  line-height: 35px;
}
.nav .active {
  color: #ff7919;
  border-bottom: 2px solid #ff7919;
}

.cartlist {
  margin: 35px 0 50px;
}

.accountview {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 100%;
}
.accountview .accountbtn {
  line-height: 50px;
  width: 100px;
  background: #ff7919;
  color: #fff;
  font-size: 14px;
  font-weight: 200;
  text-align: center;
}