/* pages/cart/cart.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 13px;
  background: #fff;
  z-index: 10;
}
.nav .navitem {
  padding: 0 60rpx;
  line-height: 35px;
}
.nav .active {
  color: #ff7919;
  border-bottom: 2px solid #ff7919;
}

.cartlist {
  margin: 35px 0 50px;
}

.accountview {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 100%;
  background: #fff;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.accountview .allSelectView {
  display: flex;
  flex-direction: row;
  line-height: 50px;
  font-size: 15px;
}
.allSelectView .imageview {
  width: 40px;
  height: 50px;
}
.allSelectView .imageview image {
  width: 14px;
  height: 14px;
  margin: 18px 13px;
}
.accountview .editView {
  display: flex;
  flex-direction: row;
}
.editView .editBtn {
  height: 20px;
  margin: 12px 10px 12px 0;
  padding: 3px 10px;
  font-size: 13px;
  font-weight: 200;
  border-radius: 4px;
  border: solid 1px #ff7919;
  color: #ff7919;
}
.moneyView .accountbtn {
  line-height: 50px;
  width: 100px;
  background: #ff7919;
  color: #fff;
  font-size: 14px;
  font-weight: 200;
  text-align: center;
}