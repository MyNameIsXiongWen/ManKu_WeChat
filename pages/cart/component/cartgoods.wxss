/* pages/cart/component/cartgoods.wxss */
.imageview {
  width: 80rpx;
  height: 80rpx;
}
.imageview image {
  width: 28rpx;
  height: 28rpx;
  margin: 26rpx;
}
.goods {
  border-bottom: 20rpx solid #f5f5f5;
  display: flex;
  flex-direction: row;
  height: 200rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.goods .goodsimg {
  width: 200rpx;
  height: 200rpx;
}
.goods .goodsimgview {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goods .goodscontent {
  margin: 20rpx 0 0 20rpx;
  position: relative;
}
.goods .thirdline {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 430rpx;
}
.goodscontent .goodsprice {
  color: #ff7919;
  font-size: 13px;
}
.goodscontent .countview {
  height: 50rpx;
  width: 210rpx;
  border: 1rpx solid #808080;
  border-radius: 16px;
  display: flex;
  flex-direction: row;
}
.countview view {
  font-size: 14px;
  line-height: 50rpx;
  color: #808080;
  flex: 1;
  text-align: center;
}
.countview .center {
  color: #333;
  border-left: 1rpx solid #808080;
  border-right: 1rpx solid #808080;
}